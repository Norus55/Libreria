@model CRUDSamuelGarcesEF.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}

<h3>Quieres eliminar esta categoría?</h3>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CodigoCategoria" />
        <input type="submit" value="Eliminar" class="btn btn-danger btn-sm" /> |
        <a class="btn btn-secondary btn-sm" asp-action="Index">Regresar</a>
    </form>
</div>
