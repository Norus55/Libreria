                        </button>
                        <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete('@item.Isbn', '@item.Titulo')">
                            <i class="fi fi-rr-trash"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
